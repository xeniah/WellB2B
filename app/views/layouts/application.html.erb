<!DOCTYPE html>
<html>
  <head>
	<div style="float:right; background-color:white;">
		<%#= "Request Action: #{request[:action]}"%>
		<%#= "Request Controller: #{request[:controller]}"%>
		 <% if current_user.nil? %>
	        <%= link_to "Register", new_user_path%>
			<%= link_to "Login", login_path %>
		 <% else %>
			<%= link_to "Logout", logout_path %>
		 <% end %>	
	</div>	
    <title><%= content_for?(:title) ? yield(:title) : "Wellness Buzz" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
	
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
	 <div id = "nav">
		<% if request[:controller] == 'user_sessions' || 
			(request[:controller] == 'users' && request[:action] == 'new')%>
		<% else %>
		    <%= "Hello, user #{current_user.username}, your user id is #{current_user.id} "%><br/>
	    	<%= link_to "New Challenge", new_challenge_path %>
		    <%= link_to "My Challenges",  '/challenges/list/my_challenges' %>
		    <%= link_to "Sent Challenges","/challenges/list/sent_challenges" %>
	    <% end %>
	 <div>
      <%= content_tag :h1, yield(:title) if show_title? %>
	  
      <%= yield %>
    </div>
  </body>
</html>
